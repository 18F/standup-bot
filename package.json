{
  "name": "standup-bot",
  "version": "0.9.3",
  "description": "a bot to handle periodic standup meetings in Slack",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/18f/standup-slack-bot.git"
  },
  "main": "app.js",
  "scripts": {
    "check-shrinkwrap": "node scripts/test-shrinkwrap.js",
    "lint": "jshint --config .jshintrc --exclude ./node_modules,./coverage .",
    "migrate": "./node_modules/sequelize-cli/bin/sequelize db:migrate --url $DATABASE_URL",
    "start": "node app.js",
    "test": "npm run check-shrinkwrap && LOG_LEVEL=100 istanbul cover cucumberjs && codecov"
  },
  "author": "",
  "license": "CC0-1.0",
  "dependencies": {
    "@18f/us-federal-holidays": "^1.1.0",
    "@erdc-itl/simple-logger": "^1.1.0",
    "async": "^2.1.4",
    "better-queue": "^3.8.4",
    "botkit": "^0.6.2",
    "cfenv": "^1.0.3",
    "dotenv": "^4.0.0",
    "marked": "^0.3.6",
    "moment": "^2.11.2",
    "moment-timezone": "^0.5.1",
    "mustache": "^2.2.1",
    "node-schedule": "^1.0.0",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.69.0",
    "require-directory": "^2.1.1",
    "sequelize": "^4.10.2",
    "sequelize-cli": "^3.0.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "codecov": "^1.0.1",
    "cucumber": "^1.3.1",
    "istanbul": "^0.4.2",
    "jshint": "^2.9.1",
    "mocha": "^3.2.0",
    "mock-require": "^2.0.0",
    "sinon": "^1.17.3",
    "sinon-as-promised": "^4.0.0"
  },
  "engines": {
    "node": "^6.7.0"
  }
